<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<!-- Custom titlebar -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_red" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/actionbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:text="@string/stellplats"
                android:textAppearance="@style/ActionBarTitle" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:text="@string/stellplats"
                android:textAppearance="@style/ActionBarText" />
        </LinearLayout>

        <ImageView
            android:id="@+id/actionIcon01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:contentDescription="ActionBar icon"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_action_info" />

        <ImageView
            android:id="@+id/actionIcon02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/actionIcon01"
            android:clickable="true"
            android:contentDescription="ActionBar icon"
            android:maxHeight="32dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_action_filter" />

    </RelativeLayout>

	<!-- List of pitches in a region (or all regions) -->
	<ListView android:id="@+id/listRegion"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>

 </LinearLayout>