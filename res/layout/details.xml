    <!-- Caravans welcome or not -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp" >

        <ImageView
            android:id="@+id/details_image_caravan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="2sp"
            android:contentDescription="@string/details_img_alt"
            android:paddingTop="3dp"
            android:src="@drawable/ic_spl_button_ok" >
        </ImageView>

        <TextView
            android:id="@+id/details_label_caravan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:text="@string/details_label_caravan"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>
    </LinearLayout>
    <!-- Open at winter / long stay or short stay -->

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp" >

        <ImageView
            android:id="@+id/details_image_winter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="2sp"
            android:contentDescription="@string/details_img_alt"
            android:paddingTop="3dp"
            android:src="@drawable/ic_spl_button_unknown" >
        </ImageView>

        <TextView
            android:id="@+id/details_label_winter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:text="@string/details_label_winter"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <ImageView
            android:id="@+id/details_image_stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="2sp"
            android:contentDescription="@string/details_img_alt"
            android:paddingTop="3dp"
            android:src="@drawable/ic_spl_button_unknown" >
        </ImageView>

        <TextView
            android:id="@+id/details_label_stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:text="@string/details_label_stay"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>
    </LinearLayout>

    <!-- Heading: Service -->

    <TextView
        android:id="@+id/details_heading_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="#404040"
        android:paddingBottom="2sp"
        android:paddingLeft="5sp"
        android:paddingTop="2sp"
        android:text="@string/details_label_service"
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp" >

            <!-- Toilet -->

            <ImageView
                android:id="@+id/details_image_toilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_toilet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_toilet"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
            <!-- Shower -->

            <ImageView
                android:id="@+id/details_image_shower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_shower"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_shower"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
            <!-- Electricity -->

            <ImageView
                android:id="@+id/details_image_electric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_electric"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_electric"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp" >

            <!-- Water -->

            <ImageView
                android:id="@+id/details_image_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_water"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
            <!-- Waste -->

            <ImageView
                android:id="@+id/details_image_waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_waste"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
            <!-- Fee -->

            <ImageView
                android:id="@+id/details_image_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:contentDescription="@string/details_img_alt"
                android:paddingTop="3dp"
                android:src="@drawable/ic_spl_button_unknown" >
            </ImageView>

            <TextView
                android:id="@+id/details_label_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2sp"
                android:text="@string/details_label_fee"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
        </TableRow>
    </TableLayout>

    <!-- Heading: Description -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="#404040"
        android:paddingBottom="2sp"
        android:paddingLeft="5sp"
        android:paddingTop="2sp"
        android:text="@string/details_label_descr"
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>
    <!-- Description -->

    <TextView
        android:id="@+id/text_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="text_description"
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>

    <!-- Heading: Other -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="#404040"
        android:paddingBottom="2sp"
        android:paddingLeft="5sp"
        android:paddingTop="2sp"
        android:text="@string/details_label_other"
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>

    <LinearLayout
        android:id="@+id/detail_linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- GPS coordinates -->

        <TextView
            android:id="@+id/text_wgs84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="5sp"
            android:text="text_wgs84"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>
        <!-- Latest update -->

        <TextView
            android:id="@+id/text_updated"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="5sp"
            android:text="text_updated"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>
    </LinearLayout>

</LinearLayout>