<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="se.campingwebben.android.stellplats"
	android:versionCode="2" android:versionName="1.1.0">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"/>

    <!-- Permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-feature android:name="android.hardware.location.gps"/>
    
    <application
    	android:icon="@drawable/ic_launcher_stellplats"
    	android:label="@string/app_name">

		<!-- Add Google maps -->
		<uses-library android:name="com.google.android.maps" />
    
        <!-- Splash screen -->
        <activity
        	android:name=".Stellplats"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<!-- View list of pitches -->
        <activity
        	android:name=".List"
        	android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar">
           	<intent-filter>
				<action android:name="se.campingwebben.android.stellplats.CLEARSPLASH"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
        </activity>

		<!-- View info about one single pitch -->
        <activity
        	android:name=".TabsActivity"
			android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
        	android:name=".Details"
			android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
        	android:name=".MapsActivity"
			android:theme="@android:style/Theme.NoTitleBar">
        </activity>

		<!-- Show map with pitches -->
        <activity
            android:name=".GpsMapActivity"
            android:theme="@android:style/Theme.NoTitleBar">
		</activity>
 
    </application>

</manifest>